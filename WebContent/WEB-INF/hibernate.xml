<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate
Configuration DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="connection.pool_size">5</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<mapping class="org.udistrital.ojs.models.Area" />
		<mapping class="org.udistrital.ojs.models.Estado" />
		<mapping class="org.udistrital.ojs.models.Rol" />
		<mapping class="org.udistrital.ojs.models.Soporte" />
		<mapping class="org.udistrital.ojs.models.Usuario" />
		<mapping class="org.udistrital.ojs.models.UsuarioRegistrado" />
	</session-factory>
</hibernate-configuration>